<% title "Tips" %>
<%= render :partial => 'form' %>
<table>
  <caption>My current tips</caption>
  <thead>
    <tr>
      <th>Locator</th>
      <th>Multiplier</th>
      <th>Date</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
   <% @current_user.active_tips.each do |tip| %>
     <tr>
       <td><a href='<%=h tip.locator.canonicalized %>' target='new'><%=h tip.locator.canonicalized %></td>
       <td><%=h tip.multiplier %></td>
       <td><%=h tip.created_at %></td>
       <td><%= link_to 'Show', tip %></td>
     </tr>
   <% end %>
  </tbody>
</table>
