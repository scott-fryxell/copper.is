<%-content_for :head do-%>
  <title><%=current_user.name%> - Copper</title>
  <%= javascript_include_tag "tips/index" %>
<%-end-%>
<section>
  <table id="tips">
    <thead>
      <tr>
        <th>
          <span>Tips</span>
          <%if current_user.orders.count > 1 %>
          <nav id="tip_views">
            <a href="?all=true#all_tips" id="all_tips">All</a>
            <a href="?all=false#active_tips" id="active_tips">Current</a>
          </nav>
          <%end%>
        </th>
        <th>When</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'shared/tips', :object => @tips %>
    </tbody>
  </table>
</section>