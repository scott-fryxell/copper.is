<% title "New Gratuity" %>
<section>
  <% form_for(@tip) do |f| %>
    <aside>
      <%= f.error_messages %>    
    </aside>


    <fieldset>
      <legend>
        Thank something awesome
      </legend>

      <label for="text_area"><%= f.label :url %></label>
      <%= f.text_area :url %>

      <label for="tip_amount"><%= f.label :amount %></label>
      <%= f.text_field :amount %>

    </fieldset>
    <%= f.submit 'Create' %>
  <% end %>

  <nav>
    <%= link_to 'Back', tips_path %>  
  </nav>  
</section>

