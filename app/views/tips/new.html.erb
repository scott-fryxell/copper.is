<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "tips/new" %>
    <%= javascript_include_tag "tips/new" %>
    <%= javascript_include_tag "analytics" if Rails.env.production?%>
  </head>
  <body id="<%= params[:controller].parameterize%>_<%= params[:action].parameterize%>" <%=item_scope%> itemid="/tips/new">
    <section>
      <header>
        <h1>You're Tipping</h1>
        <p itemprop="amount_in_cents"><%= current_user.tip_preference_in_cents%></p>
      </header>
      <p itemprop="title"></p>
    </section>
    <form  method="post" accept-charset="utf-8">
      <input itemprop="url" name="tip[url]" type="hidden"/>
      <input itemprop="title" name="tip[title]" type="hidden" />
      <input itemprop="thumbnail_url" name="tip[thumbnail_url]" type="hidden" />
      <input itemprop="amount_in_cents" name="tip[amount_in_cents]" 
             type="hidden" value="<%= current_user.tip_preference_in_cents%>"/>
    </form>
  </body>
</html>
