// When the patron is not logged in redirect to the login page.
// Keep the tip in the session until user logs in.

var flb = {
  notify: function (title) {
    // When the tip is successful notify patron.
    var iframe = document.createElement("iframe");
    iframe.setAttribute('src', 'http://0.0.0.0:3000/notification.html');
    iframe.setAttribute('height', '60px');
    iframe.setAttribute('width', '60px');
    iframe.setAttribute('scrolling', 'no');
    iframe.setAttribute('frameborder', '0');
    iframe.setAttribute('style', 'position:fixed; top:20px; right:40px; z-index:9001; background:white;');
    iframe.setAttribute('id', 'flbNotification');
    document.body.appendChild(iframe);
    
    setTimeout(function (){
      iframe.setAttribute('style', 'display:none;');
    }, 700 );
  }
}

flb.notify("<%= @title %>");