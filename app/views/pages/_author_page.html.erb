<%-cache page do-%>
<details itemscope itemtype='/pages' itemid='<%=page.id%>' data-author_state="<%=page.author_state%>" open>
  <summary>
    <h2 itemprop="title"><%=page.title%></h2>
    <figure>
      <img itemprop="thumbnail_url" src="<%=page.thumbnail%>" alt="tip image" title="<%=page.title%>"/> 
      <figcaption data-cents="<%=page.tips.sum(:amount_in_cents)%>"></figcaption>
    </figure>
  </summary>
  <dl>
    <dt>Source</dt>
    <dd><a itemprop="url" target="_blank" href="<%=page.url%>"><%=URI(URI.escape(page.url))%></a></dd>
    <dt>
      <details>
        <summary><%=pluralize(page.tips.count, 'tip')%></summary>
        <table>
          <thead>
            <tr>
              <th>when</th>
              <th>amount</th>

            </tr>
          </thead>
          <tbody>
            <%= render partial:"tips/author_tips", collection:page.tips, as: :tip %>
          </tbody>
        </table>
      </details>          
    </dt>
  </dl>        
</details>
<%-end-%>