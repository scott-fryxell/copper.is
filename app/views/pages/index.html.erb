<section id="banner">
  <header>
    <%= image_tag "icons/silhouette.svg", class:"author", alt:'me' %>
  </header>
  <hgroup>
    <h1>Trending pages</h1>
  </hgroup>
  <p>here are some pages that other copper fans have been tipping. </p>
</section>
<% cache("trending_pages", :expires_in => 1.hour) do %>
<section id="pages">
  <%= render partial:"show", collection:Page.safe.includes(:tips).order("updated_at DESC").limit(75), as: :page %>
</section>
<%-end-%>