<% content_for :head do %>
  <title>Information for Authors - copper.is</title>
<% end %>

<section id="authors">
  <h1>Author Settings</h1>

  <section id="identity">
    <header>
      <h2>Identities <span><%= current_user.identities.count%></span></h2>
      <p>Link the sites you have content on.</p>
    </header>
    <%=link_to 'edit', identities_path %>
  </section>
  <section id="royalty">
    <header>
      <h2>Royalties</h2>
      <p>View a list of the royalties owed to you.</p>
    </header>
    <%= link_to'royalties', checks_path %>
  </section>

  <section id="badge">
    <header>
      <h2>Badge</h2>
      <p>include the badge on your pages.</p>
    </header>
    <%= link_to 'badge', badge_path %>
  </section>

</section>