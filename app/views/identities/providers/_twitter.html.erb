<section class="twitter">
  <%-if twitter.image? -%>
    <h2><%= image_tag "providers/twitter.png", :class => "provider" %></h2>
  <%-end-%>
  <figure>
    <%-if twitter.image? -%>
      <%= image_tag twitter.image %>
    <%-else-%>
      <%= image_tag "providers/twitter.png", :class => "provider" %>
    <%-end-%>
  </figure>
  <p><%=twitter.name%></p>
  <%- if current_user.identities.count > 1 -%>
  <form action='<%=identity_path(twitter)%>' method="post">
    <input name="_method" type="hidden" value="delete"/>
    <input type="submit" name="submit" value="remove">
  </form>
  <%-end-%>
</section>
