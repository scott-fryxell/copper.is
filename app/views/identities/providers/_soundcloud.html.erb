<section class="soundcloud">
  <%-if soundcloud.image? -%>
    <h2><%= image_tag "providers/soundcloud.png", :class => "provider" %></h2>
  <%-end-%>
  <figure>
    <%-if soundcloud.image? -%>
      <%= image_tag soundcloud.image %>
    <%-else-%>
      <%= image_tag "providers/soundcloud.png", :class => "provider" %>
    <%-end-%>
  </figure>
  <p><%=soundcloud.name%></p>
  <%- if current_user.identities.count > 1 -%>
  <form action='<%=identity_path(soundcloud)%>' method="post">
    <input name="_method" type="hidden" value="delete"/>
    <input type="submit" name="submit" value="remove">
  </form>
  <%-end-%>
</section>
