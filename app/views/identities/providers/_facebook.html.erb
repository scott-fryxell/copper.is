<figure class="facebook">
  <%= image_tag "providers/facebook/sign_in.png"%>
  <figcaption><%=facebook.username%></figcaption>
  <%-if current_user.identities.count > 1-%>
  <form action='<%=identity_path(facebook)%>' method="post">
    <input name="_method" type="hidden" value="delete"/>
    <input type="submit" name="submit" value="X">
  </form>
  <%-end-%>
</figure>