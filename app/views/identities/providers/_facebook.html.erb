<section class="facebook">
  <%-if facebook.image? -%>
    <h2><%= image_tag "providers/facebook.jpg", :class => "provider" %></h2>
  <%-end-%>
  <figure>
    <%-if facebook.image? -%>
      <%= image_tag facebook.image %>
    <%-else-%>
      <%= image_tag "providers/facebook.jpg", :class => "provider" %>
    <%-end-%>
  </figure>
  <p><%=facebook.name%></p>
  <%- if current_user.identities.count > 1 -%>
  <form action='<%=user_identity_path(current_user, facebook)%>' method="post">
    <input name="_method" type="hidden" value="delete"/>
    <input type="submit" name="submit" value="remove">
  </form>
  <%-end-%>
</section>