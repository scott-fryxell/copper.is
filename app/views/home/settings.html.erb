<%-content_for :head do-%>
  <title><%=current_user.name%>'s Settings - Copper.</title>
<%-end-%>
<section id="banner">
  <header>
    <%= image_tag "icons/silhouette.svg", class:"identity", alt:'me' %>
  </header>
  <hgroup>
    <h1>Your Settings</h1>
    <p><%=current_user.name%><a href="/signout">not you?</a></p>
  </hgroup>
  <p>
    Hey, cool. You’ve found some great stuff to tip with Copper.
    Let’s get your tips to the creators...
    <br><br>
    Please add your payment info so we can start getting your 
    tips to the people whose content you’ve liked. Once we have 
    your info we’ll charge you monthly whenever you have over 
    $10 of tips pledged.
  </p>
</section>
<section id="email" class="setting">
  <header>
    <h2>Contact Info</h2>
    <a href="#">Change</a>
  </header>
  <div>
    <h4>Email Address</h4>
    <p itemprop="email"><%=current_user.email%></p>
  </div>
  <form method="put" action="/fans/me" accept-charset="UTF-8">
    <input itemprop="email" name='user[email]' type="email" required value="<%=current_user.email%>">
    <input type="submit" value="Save"/>
  </form>
</section>
<section id="rate" class="setting">
  <header>
    <h2>Default Tip</h2>
    <a href="#">Change</a>
  </header>
  <div>
    <p itemprop="tip_preference_in_cents"><%=current_user.tip_preference_in_cents%></p>
  </div>
  <form method="put" action="/fans/me" accept-charset="UTF-8">
    <select itemprop="tip_preference_in_cents" name="user[tip_preference_in_cents]">
      <option value="5" <%= 'selected ' if current_user.tip_preference_in_cents == 5%> >$0.05</option>
      <option value="10" <%= 'selected ' if current_user.tip_preference_in_cents == 10%>>$0.10</option>
      <option value="25" <%= 'selected ' if current_user.tip_preference_in_cents == 25%>>$0.25</option>
      <option value="50" <%= 'selected ' if current_user.tip_preference_in_cents == 50%>>$0.50</option>
      <option value="75" <%= 'selected ' if current_user.tip_preference_in_cents == 75%>>$0.75</option>
      <option value="100" <%= 'selected ' if current_user.tip_preference_in_cents == 100%>>$1.00</option>
      <option value="200"<%= 'selected ' if current_user.tip_preference_in_cents == 200%>>$2.00</option>
      <option value="300" <%= 'selected ' if current_user.tip_preference_in_cents == 300%>>$3.00</option>
      <option value="500" <%= 'selected ' if current_user.tip_preference_in_cents == 500%>>$5.00</option>
      <option value="1000" <%= 'selected ' if current_user.tip_preference_in_cents == 1000%>>$10.00</option>
      <option value="1500" <%= 'selected ' if current_user.tip_preference_in_cents == 1500%>>$15.00</option>
      <option value="2000" <%= 'selected ' if current_user.tip_preference_in_cents == 2000%>>$20.00</option>
    </select>
    <input type="submit" value="Save"/>
  </form>
</section>
<section id="card" class="setting">
  <header>
    <h2>Payment Info</h2>
    <a href="#">Change</a>
  </header>
  <div>
    <section>
      <h4>Type Of Card</h4>
      <p class="type"></p>
    </section>
    <section>
      <h4>Card Number</h4>
      <p class="number"></p>
    </section>
    <section>
      <h4>Expiration</h4>
      <p class="expiration"></p>
    </section>
  </div>
  <script type="text/javascript" src="https://js.stripe.com/v1/"></script>
  <input itemprop="stripe_id" name="stripe_id" type="hidden" value="<%=current_user.stripe_id%>">
  <form method="put">
    <!-- 4242424242424242 test approved-->
    <!-- 4000000000000002 test declined-->
    <h1></h1>
    <fieldset>
      <input type="text" autocomplete="off" id="number" placeholder="Card Number" required />
      <input type="text" autocomplete="off" id="cvc" placeholder="CVC"  required />
    </fieldset>
    <fieldset>
      <select id="month">
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>
      <select id="year">
        <option value="2012">2012</option>
        <option value="2013">2013</option>
        <option value="2014">2014</option>
        <option value="2015">2015</option>
        <option value="2016">2016</option>
        <option value="2017">2017</option>
        <option value="2018">2018</option>
        <option value="2019">2019</option>
        <option value="2020">2020</option>
        <option value="2021">2021</option>
      </select>
    </fieldset>
    <fieldset class="pay">
      <input itemprop="accept_terms" type="checkbox"  name="user[accept_terms]" id="site_terms" value="true" <%= "checked" if current_user.accept_terms? %> />
      <label for="site_terms">I accept the <a href="/terms" target="window">terms</a></label>
    </fieldset>
    <input type="submit" value="Save" />
  </form>
</section>

<section id="address" class="setting">
  <header>
    <h2>Your address</h2>
    <a href="#address">Change</a>
  </header>
  <div>
    <p itemprop="payable_to"></p>
    <p itemprop="line1"></p>
    <p itemprop="line2"></p>
    <p>
      <span itemprop='city'></span>
      <span itemprop="subregion_code"></span> 
      <span itemprop="postal_code"></span>
    </p>
  </div>
  <%= render :partial => 'shared/address' %>
</section>

<section id="identities">
  <header>
    <h2>Your identities</h2>
    <a href="#identities">Add/Remove</a>
  </header>
  <div>
    <%-current_user.identities.each do |identity|-%>
    <figure class="<%=identity.provider%>" itemscope itemtype="identities"  itemid="<%=identity.id%>">
      <%= image_tag "providers/#{identity.provider}/sign_in.png", title:identity.username%>
      <figcaption itemprop='username'><%=identity.username%></figcaption>
      <%-if current_user.identities.count > 1-%>
      <form action='<%=identity_path(identity)%>' method="delete">
        <input type="submit" name="submit" value="X">
      </form>
      <%-end-%>
    </figure>
    <%-end-%>
  </div>
  <aside>
    <header>
      <h2>Authorize other identities</h2>
    </header>
    <nav>
      <a href="/auth/facebook" title="Authorize facebook">
        <%= image_tag "providers/facebook/sign_in.png"%>
      </a>
      <a href="/auth/twitter" title="Authorize twitter">
        <%= image_tag "providers/twitter/sign_in.png"%>
      </a>
      <a href="/auth/google_oauth2" title="Authorize google">
        <%= image_tag "providers/google/sign_in.png"%>
      </a>
      <a href="/auth/soundcloud" title="Authorize soundcloud">
        <%= image_tag "providers/soundcloud/sign_in.png"%>
      </a>
      <a href="/auth/vimeo" title="Authorize vimeo">
        <%= image_tag "providers/vimeo/sign_in.png"%>
      </a>
      <a href="/auth/tumblr" title="Authorize tumblr">
        <%= image_tag "providers/tumblr/sign_in.png"%>
      </a>
      <a href="/auth/github" title="Authorize github">
        <%= image_tag "providers/github/sign_in.png"%>
      </a>
      <a href="/auth/flickr" title="Authorize flickr">
        <%= image_tag "providers/flickr/sign_in.png"%>
      </a>
    </nav>
  </aside>
</section>

<nav>
  <a href="/fans/me">return to profile</a>
</nav>

