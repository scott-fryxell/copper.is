<section id="banner">
  <figure>
    <img src="<%=@author.profile_image%>" class="author"/>
    <figcaption><%=cents_to_dollars(@author.tips.sum(:amount_in_cents))%></figcaption>
  </figure>
  <hgroup>
    <h1><span><%=@author.username%></span> has <%=@author.pages.count%> pages that have been tipped</h1>
  </hgroup>
  <p>
  </p>
</section>

<section class="pages" >
  <%= render partial:"pages/as_figure", collection:@author.pages, as: :page %>
</section>