<meta name="event_trigger" content="tip_success"/>
<section class="notify" itemscope="true" itemtype="tip">
  <img src="/graphics/logo/name/red.png">
  <header>
    <h1>You've tipped</h1>
  </header>
  <p itemprop="description"><%= CGI::unescape(@tip.locator.page.description) %></p>
  <%= render :partial => 'shared/dashboard' %>
  <%if current_user.active_tip_order.time_to_pay?%>
    <script type="text/javascript" charset="utf-8">
      FLB.time_to_pay = <%= current_user.active_tip_order.time_to_pay? %>
    </script>
  <%end%>
  <%= render :partial => 'shared/flash' %>
</section>

