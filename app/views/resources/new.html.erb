<% title "New Resource Location" %>
<section>
  <header>
    <aside>
      Resource Form For...
    </aside>
    <h1>Add a new resource</h1>
    <nav>
      <%= link_to 'Back', resources_path %>
    </nav>
  </header>
  <% form_for(@resource) do |f| %>    
  <fieldset>
    <legend><%= f.error_messages %></legend>
    
    <label for="resource_scheme"><%= f.label :scheme %></label>
    <%= f.text_field :scheme %>
    <label for="resource_userinfo"><%= f.label :userinfo %></label>
    <%= f.text_field :userinfo %>
    <label for="resource_host"><%= f.label :host %></label>
    <%= f.text_field :host %>
    <label for="resource_port"><%= f.label :port %></label>
    <%= f.text_field :port %>
    <label for="resource_registry"><%= f.label :registry %></label>
    <%= f.text_field :registry %>
    <label for="resource_path"><%= f.label :path %></label>
    <%= f.text_field :path %>
    <label for="resource_opaque"><%= f.label :opaque %></label>
    <%= f.text_field :opaque %>
    <label for="resource_query"><%= f.label :query %></label>
    <%= f.text_field :query %>
    <label for="resource_fragment"><%= f.label :fragment %></label>
    <%= f.text_field :fragment %>
  </fieldset>
  <%= f.submit 'Create' %>
  <% end %>
  <footer>
    <nav>
      <%= link_to 'Back', resources_path %>
    </nav>
  </footer>
</section>