<% if current_user %>
  <style>
    @import url(/design/dashboard.css);
  </style>
  <aside itemscope="true" itemtype="order">
    <dl>
      <dt>Tips</dt>
      <dd itemprop="tips"><%= link_to current_user.active_tips.count, tips_path %></dd>
      <dt>Rate</dt>
      <dd itemprop="rate">$<%= cents_to_dollars(current_user.tip_preference_in_cents) %></dd>
      <dt>Balance</dt>
      <dd itemprop="balance">$<%= cents_to_dollars(current_user.active_tip_order.subtotal) %></dd>
    </dl>
  </aside>
<% end %> 