<% if current_user %>
  <aside itemscope="true" itemtype="order">
    <dl>
      <dt>Tips</dt>
      <dd itemprop="tips"><%= current_user.active_tips.count %></dd>
      <%- if @tip.amount_in_cents -%>
        <dt>Amount</dt>
        <dd itemprop="balance">$<%= cents_to_dollars(@tip.amount_in_cents) %></dd>
      <%-else-%>
        <dt>Rate</dt>
        <dd itemprop="rate">
          <%= render :partial => 'shared/tip_rate' %>
        </dd>
      <%-end-%>
      <dt>Balance</dt>
      <dd itemprop="balance">$<%= cents_to_dollars(current_user.active_tip_order.subtotal) %></dd>
    </dl>
  </aside>
<% end %>