<% if current_user %>
  <aside itemscope="true" itemtype="order">
    <dl>
      <dt>Tips</dt>
      <dd itemprop="tips"><%= current_user.current_order.tips.count %></dd>
      <dt>Rate</dt>
      <dd itemprop="rate">
        <%= render :partial => 'shared/tip_rate' %>
      </dd>
      <dt>Balance</dt>
      <dd itemprop="balance">$<%= cents_to_dollars(current_user.current_order.subtotal) %></dd>
    </dl>
  </aside>
<% end %>