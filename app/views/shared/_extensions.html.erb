<section id="extensions">
  <p>
    Click your browser's logo below to install your button.
  </p>

  <figure id="firefox">
    <a href="/extensions/DirtyWhiteCouch.xpi"
      iconURL="/graphics/firefox.png"
      hash="sha1:8787d9dfdf1f5b87ce14503a11bf8a7fd6cb4bf0">
      <img src="/graphics/firefox.png"></a>

    <figcaption>Firefox</figcaption>
  </figure>
  <figure>
    <a href="/extensions/DirtyWhiteCouch.com.crx"><img src="/graphics/chrome.png"></a>
    <figcaption>Chrome</figcaption>
  </figure>
  <figure>
    <a href="/extensions/DirtyWhiteCouch.com.safariextz"><img src="/graphics/safari.png"></a>
    <figcaption>Safari</figcaption>
  </figure>
  <figure id="bookmarklet">
    <figcaption>bookmarklet</figcaption>
    <a href="<%= render :partial => 'tips/wrapped_launcher.js' %>">IOU</a>
    <p>
       Alternatively you can drag the bookmarklet
       to your bookmarks toolbar
    </p>

  </figure>
</section>

<script type="application/javascript">
$("#firefox > a").click(function(){
  var params = {
    "Foo": { URL: this.href,
             IconURL: this.getAttribute("iconURL"),
             Hash: this.getAttribute("hash"),
             toString: function () { return this.URL; }
    }
  };
  InstallTrigger.install(params);
  return false;
});
</script>