<% if current_user %>
  <hgroup id="signed_in">
    <nav>
      <%= link_to image_tag("icons/silhouette.png"), user_url(current_user) %>
      <%= link_to image_tag("icons/gear.png"), edit_user_url(current_user)%>
    </nav>
    <%= image_tag current_user.identities.first.image %>
  </hgroup>
<% else %>
  <hgroup id='sign_in'>
    <nav>
      <h1>SIGN IN</h1>
      <a id="facebook_sign_in" href="/auth/facebook"><%= image_tag "providers/fb.png" %></a>
      <a id="twitter_sign_in" href="/auth/twitter"><%= image_tag "providers/twitter.png" %></a>
      <a id="google_sign_in" href="/auth/google_oauth2"><%= image_tag "providers/g+.png" %></a>
    </nav>
  </hgroup>
<% end %>