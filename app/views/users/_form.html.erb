<section>
  <style>
    @import url("/users/design.css");
  </style>
  <script src="/users/behavior.js"></script>
  <h1>Setting things up</h1>
  <p>
    Configure your account by clicking on each section.
  </p>
  <details id="bookmarklet" open="closed" class="required">
    <summary>
      Install the bookmarklet
    </summary>
    <p>
      Drag bookmarklet to your browser toolbar.
    </p>
    <p>
      <span>&#x27A0;</span>
      <a id="dirtywhitecouch" href="<%= render :partial => 'home/wrapped_launcher.js' %>" tabindex="1" accesskey="p">Tip</a>
    </p>
  </details>
  <details id="authorize" open="closed" class="required">
    <summary>Authorize Tips</summary>
    <p>
      This part is coming soon. Until then you can
      tip with the bookmarklet all's you want. Eventually
      we'll start taking your money.
    </p>
  </details>
  <details id="tip_rate" open="closed" class="">
    <summary>Select your tip rate</summary>
    <p>
      Select the amount you want each tip to be.
    </p>
    <form action="" method="post" accept-charset="utf-8">
      <input name="_method" type="hidden" value="put">
      <input name="authenticity_token" type="hidden" value="<%=form_authenticity_token%>">
      <fieldset>
        <label for="user_tip_preference_in_cents">Tip Rate</label>
        <select name="user[tip_preference_in_cents]" id="user_tip_preference_in_cents">
          <option value="5">$0.05</option>
          <option value="10">$0.10</option>
          <option value="25">$0.25</option>
          <option value="50">$0.50</option>
          <option value="75">$0.75</option>
          <option value="100">$1.00</option>
          <option value="200">$2.00</option>
          <option value="300">$3.00</option>
          <option value="500">$5.00</option>
        </select>
      </fieldset>
    </form>
  </details>

  <details id="badge" open="closed" class="optional">
    <summary>Use the badge</summary>
    <p>
      Copy the contents of this box into the content you've created
    </p>
    <textarea name="copy">
      <img style="cursor:pointer; width:222px; height:222px" src="<%=request.scheme%>://<%=request.host%>:<%=request.port%>/bookmarklet/badge.png" onclick="<%= render :partial => 'home/launcher.js' %>"/>
    </textarea>
  </details>
</section>