<section class="facebook">
  <%-if facebook.image? -%>
    <h2><%= image_tag "providers/facebook-2.jpg", :class => "provider" %></h2>
  <%-end-%>
  <figure>
    <%-if facebook.image? -%>
      <%= image_tag facebook.image %>
    <%-else-%>
      <%= image_tag "providers/facebook-2.jpg", :class => "provider" %>
    <%-end-%>
  </figure>
  <p><%=facebook.name%></p>
  <label for="facebook">
    <input type="checkbox" id="facebook" name="[user][post_to_facebook]" value="true">
    Publish tips on facebook 
  </label>
  <button type="button">remove</button>
</section>