<%-content_for :head do-%>
  <title><%=current_user.name%> - Copper</title>
  <%= stylesheet_link_tag "users/identities" %>
<%-end-%>

<section id="identities">
  <h1>link accounts</h1>
  <nav>
    <a id="twitter_sign_in" href="/auth/twitter"><%= image_tag "providers/twitter.png" %></a>
    <a id="facebook_sign_in" href="/auth/facebook"><%= image_tag "providers/facebook.png" %></a>
    <a id="google_sign_in" href="/auth/google_oauth2"><%= image_tag "providers/google.png" %></a>
    <a id="youtube_sign_in" href="/auth/google_oauth2"><%= image_tag "providers/youtube.png" %></a>
    <a id="tumblr_sign_in" href="/auth/tumblr"><%= image_tag "providers/tumblr.png" %></a>
    <a id="github_sign_in" href="/auth/github"><%= image_tag "providers/github.png" %></a>
  </nav>

  <h1>Linked accounts</h1>
  <%-current_user.identities.each do |identity|-%>
      <%= render :partial => 'users/identities/' + identity.provider, :object => identity %>
  <%-end-%>

</section>