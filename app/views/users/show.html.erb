<%-content_for :head do-%>
  <title>DirtyWhiteCouch: Information for <%=current_user.name%></title>
  <%= stylesheet_link_tag "users/show" %>
  <%= javascript_include_tag "users/show" %>
<%-end-%>

<section id="user">
  <header>
    <% if current_user.active_tip_order.time_to_pay? %>
      <h1>It's time to pay for your tips</h1>
      <%= render :partial => 'shared/credit_card' %>
    <%else%>
      <%= render :partial => 'shared/dashboard' %>
      <hgroup>
        <form method="post" accept-charset="utf-8" id="new_tip">
    
          <input name="utf8" type="hidden" value="âœ“">
          <input name="authenticity_token" type="hidden">
          
          <label for="uri">URL</label>
          <input type="text" name="tip[uri]" value="" id="uri" autofocus />
          <input type="submit" value="TIP">
        </form>

      </hgroup>
    <%end%>
  </header>

  <table id="tips">
    <thead>
      <tr>
        <th>
          <span>Tips</span>
          <%if current_user.tip_orders.count > 1 %>
          <nav id="tip_views">
            <a href="/tips?all=true#all_tips" id="all_tips">All</a>
            <a href="/tips#active_tips" id="active_tips">Active</a>
          </nav>
          <%end%>
        </th>
        <th>When</th>
        <th>Manage</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'shared/tips', :object => @tips %>
    </tbody>
  </table>
</section>