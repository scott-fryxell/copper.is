<%-cache user do-%>
<dl itemscope itemtype='user' itemid='<%=user_url(user)%>'>
  <dd itemprop="id"><%=user.id%></dd>
  <dd itemprop='name'><%=user.name%></dd>
  <dd itemprop="email"><%=user.email%></dd>
  <dd itemprop="tip_preference_in_cents"><span>&#162;</span><%=user.tip_preference_in_cents%></dd>
  <dd itemprop="tip_count"><%=user.tips.count%></dd>
  <dd itemprop="stripe_id"><%=user.stripe_id%></dd>
  <dd itemprop='accept_terms'><%=user.accept_terms%></dd>
  <dd itemprop='tip_count'><%=user.tips.count%></dd>
  <dd itemprop='share_on_facebook'><%=user.share_on_facebook%></dd>
  <dd>
    <time itemprop="created_at" datetime="<%=user.created_at.getutc.iso8601%>"/>
  </dd>
  <dd>
    <time itemprop="updated_at" datetime="<%=user.created_at.getutc.iso8601%>"/>
  </dd>
  <%-user.roles.each do |role| -%>
  <dd itemprop="<%=role.name%>">true</dd>
  <%-end-%>
</dl>
<%-end-%>
