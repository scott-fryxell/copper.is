<nav id="models">
  <a href="#users">users</a>
  <a href="#authors">authors</a>
  <a href="#pages">pages</a>
  <a href="#tips">tips</a>
  <a href="#orders">orders</a>
  <a href="#checks">checks</a>
</nav>
<section id="states">
  <article id="users">
    <details itemscope itemtype="users" itemid="/users?state=recent">
      <summary><span>users</span>recent</summary>
      <meta itemprop="count" content="<%=User.count%>">
    </details>
  </article>

  <article id="authors">
    <%-[:stranger, :wanted, :known].each do |state|-%>
    <details itemscope itemtype="authors" itemid="/authors?state=<%=state%>">
      <summary><span>authors</span><%=state%></summary>
      <meta itemprop="count" content="<%=Author.send(state).count%>">
    </details>
    <%-end-%>
  </article>

  <article id="pages">
    <%-[:adopted, :orphaned, :fostered, :dead, :manual].each do |state|-%>
    <details itemscope itemtype="pages" itemid="/pages?state=<%=state%>" >
      <summary><span>pages</span><%=state%></summary>
      <meta itemprop="count" content="<%=Page.send(state).count%>">
    </details>
    <%-end-%>
  </article>

  <article id="tips">
    <%-[:promised, :charged, :kinged].each do |state|-%>
    <details itemscope itemtype="tip" itemid="/tips?state=<%=state%>">
      <summary><span>tips</span><%=state%></summary>
      <meta itemprop="count" content="<%=Tip.send(state).count%>">
    </details>
    <%-end-%>
  </article>

  <article id="orders">
    <%-[:current,:paid,:unpaid,:denied].each do |state|-%>
    <details itemscope itemtype="orders" itemid="/orders?state=<%=state%>">
      <summary><span>orders</span><%=state%></summary>
      <meta itemprop="count" content="<%=Order.send(state).count%>">
    </details>
    <%-end-%>
  </article>

  <article id="checks">
    <%-[:earned, :paid, :cashed].each do |state|-%>
    <details itemscope itemtype="checks" itemid="/checks?state=<%=state%>" >
      <summary><span>checks</span><%=state%></summary>    
      <meta itemprop="count" content="<%=Check.send(state).count%>"></p>
    </details>
    <%-end-%>
  </article>
</section>

<script itemscope itemtype="templates" itemid="/templates/orders/header" type="text/html">
  <header>
    <form>
      <button formmethod="post" formaction="/orders/{{order.id}}/reject">make current</button>
      <button formmethod="post" formaction="/orders/{{order.id}}/refund">refund</button>
    </form>
  </header>
</script>

<script itemscope itemtype="templates" itemid="/templates/orders/footer" type="text/html">
  <footer>
    <details itemscope itemtype='user' itemid='/users/{{order.user_id}}'>
      <summary>{{order.user_name} details}</summary>
    </details>
    <details itemscope itemtype='tip' itemid='/orders/{{order.id}}/tips'>
      <summary>tips</summary>
    </details>
  </footer>
</script>




