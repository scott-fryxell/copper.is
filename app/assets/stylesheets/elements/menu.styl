@require 'lib/device'
@require 'lib/transition'
@require 'color'


menu
  font-size:0rem
  -webkit-padding-start:0
  padding:0

  & > a,
  & > button,
  & > input,
  & > li
    display:block
    text-transform: capitalize
    text-decoration: none

menu menu
  margin: gutter 0

  +phone-only()
    vertical-align:top;
    display:inline-block
    width:50%

body
  &.pages.recent > menu a[href="/pages/recent"],
  &.pages.trending > menu a[href="/pages/trending"],
  &.users.settings > menu a[href="/my/settings"],
  &.authors.settings > menu a[href="/my/authorizations"],
  &.tips.given > menu a[href="/tips/given"],
  &.tips.received > menu a[href="/tips/received"]
    font-weight:bold
    color:copper

  &[data-role=guest] > menu.show
    +phone-only()
      height:7.5rem

  &[data-role=fan] > menu.show
    +phone-only()
      height:15rem
      max-height:15rem

  & > menu
    +phone-only()
      border:0px solid transparent
      padding:0
      background-color:riser
      height:0;
      overflow-y:hidden
      standard-transition: max-height height

    &.show
      border:1px inset riser
      margin-bottom:1rem

    h6
      padding:0.25rem 0
      text-align:center
      opacity:0.15
      header-text()
      text-shadow: 1px 0px 0px dark
      font-size:1rem
      +phone-only()
        opacity:0.2
    a
      text-align:center
      padding:0.25rem 0

    a[href='/auth/facebook'] svg
      width:1.25rem
      height:1.25rem
      border:1px solid darken(riser,25%)
      border-radius:0.25rem


    a[href='/auth/google'] svg
      width:1.5rem
      height:1.5rem
  menu.authentication
    +phone-only()
      font-size:0
      & > a
        display:inline-block
        width:33%
        padding:0.15rem

menu.fan.signout a
  opacity:0.75
