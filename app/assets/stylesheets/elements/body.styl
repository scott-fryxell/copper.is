@require 'color'
@require 'typography'

body
  background-color: hsla(5,5%,90%,0.5)
  & > menu
    -webkit-padding-start:0


    & > a
      color: hsla(0,13%,55%,0.9)
      font-weight:100
      font-size:1.1rem
      letter-spacing:1px
      border:none
      text-align:center
      text-decoration:none
      border-radius:0.25em

  & > header
    padding:0.5rem 0

    & > figure
      width:14.5%
      padding:0.25rem
      display:inline-block
      text-align:center;
      img
        width:6rem;

  & > footer
    background-color: hsla(5,3%,0%,0.9)
