@require 'lib/device'
@require 'lib/flex'

body

  & > svg
    display:none

  display-flex()
  flex-direction:column

  +tablet()
    flex-flow row wrap

    & > header,
    & > footer
      flexx: 0 1 100%

    & > menu
      flexx: 1 0.22 20%

    & > main
      flexx: 1.618 1 80%

  +laptop()
    & > menu
      flexx: 1 0.22 16%

    & > main
      flexx: 1.618 1 84%
