@require 'color'
@require 'typography'

body
  background-color: tan
  & > menu
    & > a
      letter-spacing:1px
      text-align:center
      text-decoration:none
      border-radius:0.25em
      text()

  & > header
    padding:0.5rem 0

    & > figure
      text-align:center

      +tablet()
        padding:0.5rem
        width:10rem
      img
        width:6rem;

  & > footer
    background-color: hsla(5,3%,0%,0.9)
