@require 'color'
@require 'typography'

body
  height:100%

  & > *
    /*border:1px solid hsla(5,3%,5%,0.90)*/
    border-bottom:none
    font-size:1rem
    font-weight:400
    letter-spacing:1px

  & > menu
    // font-size:0
    -webkit-padding-start:0
    background-color: hsla(5,5%,90%,0.5)
    +laptop()
      font-size:1rem

    & > a
      color: hsla(0,13%,55%,0.90)
      /*color: hsla(5,3%,5%,0.90)*/
      font-weight:100
      font-size:1.1rem
      letter-spacing:1px
      /*margin:1rem*/
      padding:0 0.5rem
      margin:0 0.25rem
      border:none
      text-align:center
      text-decoration:none
      border-radius:0.25em
      +laptop()
        padding:0
        margin:1rem 0.25rem

  & > header
    background-color: hsla(5,3%,0%,0.9)
    background-color: hsla(5,30%,5%,0.5)

    background-image: radial-gradient(
      circle at top left,
      hsla(5,50%,90%,1),
      hsla(5,40%,85%,1)
    )

  & > footer
    background-color: hsla(5,3%,0%,0.5)
    background-color: hsla(5,3%,0%,0.9)
