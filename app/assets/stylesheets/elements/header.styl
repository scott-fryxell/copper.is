@require 'lib/device'

body > header
  +tablet()
    display-flex()

  & > img
    opacity:0.25
    width:1.5rem
    height:1.5rem
    position:absolute
    top:1rem
    left:1.75rem
    standard-transition opacity
    &.show
      opacity:0.8

    +tablet()
      display:none

  & > figure
    text-align:center
    padding:0.5rem 0 0 0
    +tablet()
      flexx: 0 0.22 15%
    a > img
        height:2rem
