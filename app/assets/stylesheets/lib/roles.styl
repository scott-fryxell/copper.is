roles()

  .guest,
  .fan,
  .admin
    opacity:0
    long-transition: opacity

  body[data-role] .guest,
  body[data-role] .fan,
  body[data-role] .admin
    opacity:1
    long-transition: opacity

  body[data-role="guest"]

    .fan
      hide()

    .admin
      hide()

  body[data-role="fan"]

    .guest
      hide()

    .admin
      hide()

  body[data-role="admin"]

    .guest
      hide()
