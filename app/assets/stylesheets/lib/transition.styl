short-transition()
  transition-property: arguments
  transition-duration: 0.25s
  transition-timing-function: cubic-bezier(0.25, 1, 0.5, 1)

standard-transition()
  transition-property: arguments
  transition-duration: 0.5s
  transition-timing-function: cubic-bezier(0.25, 1, 0.5, 1)

long-transition()
  transition-property: arguments
  transition-duration: 1.5s
  transition-timing-function: cubic-bezier(0.25, 1, 0.5, 1)

/* Chrome, Safari, Opera */
