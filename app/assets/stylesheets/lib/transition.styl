/* Standard syntax */
@keyframes fade-in
  from {opacity: 0}
  to {opacity:1}

body
  -webkit-animation: fade-in 0.4s
  -webkit-animation-timing-function: cubic-bezier(0.25, 1, 0.5, 1)

  animation: fade-in 0.4s
  animation-timing-function: cubic-bezier(0.25, 1, 0.5, 1)
