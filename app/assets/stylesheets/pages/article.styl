article[itemtype=page]
  padding:0.5rem
  font-size:0;
  overflow:hidden
  border-radius: 0.15rem
  border:0.1rem solid riser
  border-gradient()


  vertical-align: top
  margin-bottom:0.75rem

  & > figure
    margin-right:1rem;
    display:inline-block
    border-radius: 50%
    background-color: tan
    width:4rem
    height:4rem
    -webkit-filter: sepia(15%)
    overflow:hidden
    vertical-align: middle

    & > img
      vertical-align: middle
      min-width: 100%
      height: 100%
      z-index:-1

  & > header
    font-size:1rem;
    vertical-align: middle
    display:inline-block
    width:14rem;

    +laptop()
      width:50%

    h2,
    h3
      text-shadow: 1px 1px 0 lighten(tan, 15%)
      line-height: 1.45
      overflow:hidden
      font-size: 1rem
      font-family: 'Patua One', sans-serif
      font-family: 'Doppio One', sans-serif
      font-family: 'Cantarell', sans-serif
      letter-spacing: 0
      // color:header
    h2
      text-align: left
      max-height:3rem;
      a
        header-text()

    h3
      margin: 0.25rem 0
      font-size: 0.75rem
      opacity: 0.75
      text-align: left
      text-transform: lowercase



  & > footer
    vertical-align: top
