article[itemtype=page]
  max-height: 7.5rem
  overflow:hidden
  border-radius: 0.15rem
  border:0.1rem solid darken(riser, 15%)

  vertical-align: top
  margin-bottom:0.75rem

  & > header
    font-size:0
    width:40%
    height:100%
    display:inline-block
    figure
      width:100%
      height:100%
      display:block
      font-size: 1rem
      overflow:hidden
      -webkit-filter: sepia(15%)
      & > img
        vertical-align: middle
        min-width: 100%
        height: 100%
        z-index:-1

  & > footer
    position:relative
    z-index:2
    overflow:hidden
    font-size: 0
    padding:0
    margin:0
    display:inline-block
    vertical-align: top
    width:56%
    margin: 0 1%
    h2
      height:4rem
      text-align: center

    p, h2, h3
      // text-shadow: 1px 1px 0 lighten(offset, 15%)
      line-height: 1.45
      overflow:hidden
      font-size: 1rem
      font-family: 'Patua One', sans-serif
      font-family: 'Doppio One', sans-serif
      font-family: 'Cantarell', sans-serif
      letter-spacing: 0
      color:header

    h3
      margin-bottom: 0.25rem
      font-size: 0.75rem
      opacity: 0.75
      text-align: center
      text-transform: lowercase

    nav
      font-size:0
      padding:0
       a
        border:none
        font-size: 1rem
        padding:0.25rem
        display:inline-block
        text-transform: capitalize
        color:copper
        vertical-align: top
        background:none

        &:last-of-type
          margin-left:1%
          float:right
