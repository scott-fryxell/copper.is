@import "shared/*"

body.tips.new
  margin-left:1rem
  width:350px
  font-size:16px
  dl[itemscope]
    display:none

  section
    position:relative
    background-color: overlay_color
    color:$light
    height:0
    border-radius: 0 0 0.5rem 0.5rem
    padding:0 1rem
    opacity:1
    border:2px solid dark
    border-top:none
    text()
    box-shadow: 0px 0px 0px 0px hsla(0, 0, 0, 0.5)
    @include transition(min-height 0.5s ease-out 0.25s,  padding 0.5s)

    & > header
      @include transition(min-height 0.5s ease-out 0.5s)
      min-height:0
      padding:1rem 0 0 0
      margin-bottom:0.25rem
      & > a
        display:inline-block
        &:nth-child(2)
          font-size:0.85rem
          padding:0.2rem 0.55rem
          text-decoration: none
          float:right
          color:text

        & > img
          height:1.25em
          opacity:0.25
          @include transition(opacity 0.5s)
          &:hover
            @include transition(opacity 0.5s)
            opacity:1

      & > h1
        @include header_text
        margin: 0.5rem 0 0.5rem 0
        vertical-align: middle
        font-size: 2rem
        text-align: center
        color: $copper

      & > h2
        margin-bottom: 0
        font-size: 1rem
        color: $light
        color: $subtle_text
        text-align: center

    & > form
      opacity: 0
      display: block
      vertical-align: top
      background-color:transparent
      & > fieldset
        display:block
        margin:0 auto
        width:grid-width(3)
        text-align: center
        &:before
          color:$light
          content:"$"
          font-family: 'Bree Serif', serif
          font-size:1.85em
          display:inline-block
          vertical-align: middle

      & > fieldset > input[itemprop=amount_in_dollars]
        position:relative
        width:1.85em
        background-color:transparent
        color:$light
        font-family: 'Bree Serif', serif
        margin:0
        padding:0
        vertical-align:top
        font-size: 2rem
        line-height: 1rem
        display: inline-block
        vertical-align: middle
        border: 0px solid $background_color
        border-radius: 0.25em
        &:focus
          outline:none

        &.invalid
          box-shadow: 0px 0px 0.75rem 2px $red
          border-color:$red

      & > a.button
        @include button
        display:none
        margin-left:1rem
        vertical-align:middle
        &:hover
          border:0.10em solid darken(copper, 10%)

    & > footer
      & > p
        font-size:0.75rem
        text-align:center
        & > a
          color:$text

    & > header,
    & > footer,
    &.sign_in > nav
      @include transition(opacity 0.25s ease-in)
      opacity:0

    & footer > nav
      text-align:center
      & > a
        color:$subtle_text
        text-decoration: none
        font-size:0.75rem
        &:focus
          outline:none

      &:first-child
        a
          color:$copper
        a:before
          content:"["
        a:after
          content:"]"

      &:nth-child(2)
        margin: 1rem auto 0.5rem auto
        width:grid-width(4)

        & > a
          &:first-child
            margin:0

          display:inline-block
          margin-left:0.5em
          vertical-align:top
          & > img
            opacity:0.15
            height:2rem
            width:2rem
            padding-top:0.25rem
            &:hover
              @include transition(opacity 0.5s ease-out 0s)
              opacity:0.95

  section.show,
  section.details
    min-height:21rem
    @include transition( min-height 0.25s, padding 0.25s)
    & > header
      @include transition(min-height 1s)
      min-height:2.5em
      overflow:hidden

    & > header,
    & > form,
    &.sign_in > nav
      @include transition(opacity 0.25s ease-in 0.1s)
      opacity:1

    & > footer
      @include transition(opacity 0.25s ease-in 0.1s)
      opacity:1

  section.details
    min-height:15em
    & > header
      color:subtle_text

    & > form
      width:13em
       & > input[itemprop=amount_in_dollars]
        border:2px solid text
        padding:0 0.25rem

      & > a.button
        display:inline-block

  section.sign_in
    min-height:16rem
    & > header
      padding-bottom:0em
      & > h1
        margin:1em 0 1em 0
        text-align:center
        color:$light
        font-size:1.5em
        opacity:0.5
        text-shadow: 1px -1px dark
        font-weight:normal

    & > nav
      width:8em
      margin:0 auto
      & > a
        margin-bottom:1em
        display:block

    #learn
      button()

    #close
      color:light
      text-decoration:none
      text-align:center
      opacity:0.2
      cursor:pointer
      outline:none
